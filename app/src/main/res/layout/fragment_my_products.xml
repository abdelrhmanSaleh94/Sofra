<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.restaurant.MyProductsFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/myProductFgRecyclerV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dimension5"
        android:layout_marginTop="@dimen/dimension5"
        android:layout_marginEnd="@dimen/dimension5"
        android:layout_marginBottom="55dp" />

    <RelativeLayout
        android:id="@+id/myProductFgBtnAddProduct"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/dimension5"
        android:background="@color/grey75">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimension5"
            android:drawableEnd="@drawable/ic_add_food_logo"
            android:drawablePadding="@dimen/dimension3"
            android:gravity="start|center"
            android:padding="@dimen/dimension10"
            android:text="@string/addNewProduct"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>
</FrameLayout>
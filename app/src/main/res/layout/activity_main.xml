<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.SplashActivity">

    <ImageView
        android:id="@+id/splashBackgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_splash" />

    <ImageView
        android:id="@+id/splashImageLogo"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_logo" />

    <Button
        android:id="@+id/splashBtnBuyFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dimension10"
        android:background="@drawable/round_corner_yellow"
        android:text="@string/BuyFood" />

    <Button
        android:id="@+id/splashBtnSellFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/splashBtnBuyFood"
        android:layout_margin="@dimen/dimension10"
        android:background="@drawable/round_corner_yellow"
        android:text="@string/sellingFood"
        />

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/splashBtnSellFood"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dimension10">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/splashBtnTwitter"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_twitter"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/splashBtnInstagrame"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_instagrame"
            app:civ_border_color="@color/white"
            app:civ_border_overlay="true"
            app:civ_border_width="2dp"
            />
    </LinearLayout>

</RelativeLayout>
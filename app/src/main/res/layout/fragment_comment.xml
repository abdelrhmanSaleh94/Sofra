<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.restaurant.CommentFragment">

    <LinearLayout
        android:id="@+id/CommentFragmentLinerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimension5"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dimension5"
            android:text="@string/happy"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/commentFragmentBtnAddReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimension10"
            android:background="@color/orange"
            android:text="@string/addComment"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/commentFragmentRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/CommentFragmentLinerLayout"
        android:layout_margin="@dimen/dimension5" />
</RelativeLayout>